TupleOrParensInner: Ty = {
    <Ty>,
    <first:Ty> "," <rest:Comma<Ty>> => {
        let mut types = Vec::with_capacity(rest.len() + 1);
        types.push(Box::new(first));
        types.extend(rest.into_iter().map(Box::new));
        Ty::Tuple { types }
    },
    () => Ty::Tuple { types: vec![] },
};

