    <n: Id> "(" <tys:Comma<Ty>> ")" => Variant {
        fields: tys.into_iter().enumerate().map(|(i, t)| Field {
            // FIXME(#505) choose a proper span
            name: Identifier {
                str: Atom::from(format!("{}", i)),
                span: n.span,
            },
            ty: t,
        }).collect(),
        name: n,
    },
    <n: Id> => Variant {
        name: n,
        fields: vec![],
    },
};

